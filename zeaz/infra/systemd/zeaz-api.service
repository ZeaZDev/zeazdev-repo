[Unit]
Description=ZEA Z API Service
After=network-online.target postgresql.service
Wants=network-online.target

[Service]
Type=simple
WorkingDirectory=/opt/zeaz
EnvironmentFile=/opt/zeaz/profiles/prod.env
ExecStart=/opt/zeaz/.venv/bin/gunicorn -k uvicorn.workers.UvicornWorker app.main:app -b 0.0.0.0:8000 --workers 2
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
